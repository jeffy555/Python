AddLocationForm:

<AddLocationForm>:
    country_input: country_search
    city_input: city_search
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '1.jpeg'
    FloatLayout:
        spacing: 30
        padding: [60,80,100,120]
        orientation: "vertical"
        Label:
            text: 'COUNTRY:'
            pos_hint: {"right":0.29, 'top':0.90}
            size_hint: .15, .05
            font_size: 18
        TextInput:
            id: country_search
            size_hint: .40, .07       
            pos_hint: {"right":0.75, 'top':0.90}
            font_size: 18
        Label:
            text: 'CITY:'
            pos_hint: {"right":0.34, 'top':0.75}
            size_hint: .15, .05
            font_size: 18
        TextInput:
            id: city_search
            size_hint: .40, .07
            pos_hint: {"right":0.75, 'top':0.75}
            font_size: 18
        Button:
            text: 'CHECK'
            size_hint: .40, .07
            pos_hint: {"right":0.75, 'top':0.60}
            on_press: root.validate_country()
        Label:
            id: weather
            pos_hint: {"right":1, 'top':0.88}
            font_size: 18
        
    

